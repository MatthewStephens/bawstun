<div style="float: right;" >
  <%= form_for(@imported_metadata, url:imported_metadata_file_path(@imported_metadata, anchor:"matching_files") , :method => :get, :class => "well form-search") do |f| %>

      <label class="accessible-hidden">Search by file path</label>
      <%= text_field_tag :q, params[:q], :class => "filepath-query", :placeholder => "Search by file path", :size => '30', :type => "search", :id => "filepath_search" %>
      <%= hidden_field_tag :sort, params[:sort], :id => 'filepath_sort' %>
      <%= search_as_hidden_fields(:omit_keys => [:q, :sort, :qt, :page]).html_safe %>
      <button type="submit" class="btn btn-primary" id="filepath_submit"><i class="icon-search"></i> Search</button>
  <% end %>
</div>