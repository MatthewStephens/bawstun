<%# convert class variable to a local variable if the local hasn't been set %>
<% imported_metadata = @imported_metadata unless imported_metadata  %>

    <h2 class="non lower">Descriptions
      <% if can? :edit, @imported_metadata %>
        <span style='font-size: small; font-weight: normal'>
        (<%= link_to "Edit", edit_imported_metadata_file_path %>)
        </span>
      <%end %>
    </h2>
    <table class="table table-striped"><!-- class="verticalheadings"> -->
      <tbody>
        <% imported_metadata.terms_for_display.each do |term| %>
          <% if term == :description %>
            <tr>
              <th><%= get_label(:description) %></th>
              <td>
                  <div itemprop="name">
                    <pre>
                    <%= imported_metadata.description %>
                    </pre>
                  </div>
              </td>
            </tr>
          <% else %>
            <%= render_show_field_partial(term, generic_file: imported_metadata) %>
          <% end %>
        <% end %>
      </tbody>
    </table> <!-- /verticalheadings -->

