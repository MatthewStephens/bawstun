<h2 class="non lower">Descriptions</h2>
<%= form_for @imported_metadata, url: imported_metadata_file_path(@imported_metadata.noid) do |f| %>
    <table class="table table-striped"><!-- class="verticalheadings"> -->
      <tbody>
        <% @imported_metadata.terms_for_editing.each do |term| %>
          <%= f.label term %>
          <% if [:description, :filenames].include? term %>
            <%= f.text_area term, :class => "input-large" %>
          <% else %>
            <%= f.text_field term, :class => "input-large" %>
          <% end %>
        <% end %>
      </tbody>
    </table> <!-- /verticalheadings -->
    <%= f.submit :class=>'btn btn-primary' %>
<% end %>
